<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ivBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:gravity="center">

            <ImageView

                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/margin_3"
                android:layout_marginTop="@dimen/margin_3"
                android:layout_marginBottom="@dimen/margin_3"
                android:adjustViewBounds="true"
                android:rotation="90"
                android:src="@drawable/down_arrow_bottom_bar"
                />
            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/small_gray_style"
                android:text="@string/back"
                android:gravity="center"
                android:layout_margin="@dimen/_2sdp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/screen_image"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_15sdp"
                android:src="@drawable/refer_icon"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                    android:id="@+id/screen_header"
                    style="@style/screen_header_text_style_big"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:text="Invite your Friend" />
                <in.woloo.www.application_kotlin.utilities.CenturyGothicRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_out_refer"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/screen_header"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:id="@+id/screen_description"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



    <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:clipToPadding="false"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">






           <TextView
               android:id="@+id/tvReferalMsg"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/margin_15"
               android:layout_marginTop="@dimen/margin_5"
               android:layout_marginRight="@dimen/margin_15"
               android:gravity="center_horizontal"
               android:text=""
              android:visibility="gone"
               android:textSize="@dimen/size_8"
               android:textStyle="normal" />

           <TextView
               android:id="@+id/termsAndConditionTv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="normal"
               android:textSize="@dimen/size_5"
               android:layout_marginLeft="@dimen/margin_15"
               android:layout_marginRight="@dimen/margin_15"
               android:layout_marginTop="@dimen/margin_5"
              android:visibility="gone"
               android:gravity="center"
               android:layout_gravity="center"
               android:text="Terms &amp; Conditions" />


           <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
               android:id="@+id/tvRefferalCode"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/screen_header_text_style"
               android:background="@drawable/dash_rectangle_shape"
               android:padding="@dimen/_25sdp"
               android:layout_gravity="center"
               android:layout_marginTop="@dimen/margin_10"
               android:text="unique code" />

           <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                style="@style/button_text_style"
               android:text="Share Via"
               android:layout_gravity="center"
               android:layout_margin="@dimen/_15sdp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/margin_15"
               android:layout_marginRight="@dimen/margin_15"
               android:orientation="horizontal">

               <!--<LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:visibility="gone"
                   android:orientation="vertical"
                   android:gravity="center">

                   <ImageView
                       android:id="@+id/ivFacebook"
                       android:layout_width="@dimen/margin_15"
                       android:layout_height="@dimen/margin_15"
                       android:src="@drawable/ic_fb"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:visibility="invisible"
                   android:gravity="center">

                   <ImageView
                       android:id="@+id/ivWhatsApp"
                       android:layout_width="@dimen/margin_15"
                       android:layout_height="@dimen/margin_15"
                       android:src="@drawable/ic_wht_app"/>

               </LinearLayout>-->

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:orientation="horizontal">

                  <ImageView
                   android:id="@+id/ivWhatsApp"
                   android:layout_width="@dimen/_60sdp"
                   android:layout_height="@dimen/_60sdp"
                   android:src="@drawable/whats_app_new"
                      android:background="@drawable/yello_rectangle_shape"
                      android:layout_marginHorizontal="@dimen/margin_5"
                      android:padding="@dimen/_10sdp"
                      />
                   <ImageView
                       android:id="@+id/ivShare"
                       android:layout_width="@dimen/_60sdp"
                       android:layout_height="@dimen/_60sdp"
                       android:src="@drawable/share_via_new"
                       android:layout_marginHorizontal="@dimen/margin_5"
                       android:padding="@dimen/_14sdp"
                       android:background="@drawable/yello_rectangle_shape"
                       />

               </LinearLayout>

           </LinearLayout>

           <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="normal"
               android:textSize="@dimen/size_5"
               android:layout_marginLeft="@dimen/margin_15"
               android:layout_marginRight="@dimen/margin_15"
               android:layout_marginTop="@dimen/margin_10"
              
               android:gravity="center"
               android:layout_gravity="center"
               android:text="@string/or" />

           <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
               android:id="@+id/tv_contacts"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/size_7"
               android:textColor="@color/black"
               android:gravity="center_horizontal"
               android:background="@drawable/yellow_rectangle_shape"
               android:padding="@dimen/margin_5"
               android:layout_gravity="center"
               android:layout_marginTop="@dimen/margin_10"
               android:elevation="@dimen/_4sdp"
               android:layout_marginBottom="@dimen/_15sdp"
               android:text="Invite Contacts" />

       </LinearLayout>
   </androidx.core.widget.NestedScrollView>


</LinearLayout>