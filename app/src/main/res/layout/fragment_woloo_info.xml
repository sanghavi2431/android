<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".woloo_info.fragments.WolooInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="@dimen/margin_80"
                android:layout_height="@dimen/margin_50"
                android:src="@drawable/logo"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="@dimen/size_12"
                android:layout_gravity="center"
                android:text="@string/gobindaas"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_2">

                <ImageView
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/marker_copy"/>

                <TextView
                    android:text="@string/clean_hygienic_toilets"
                    android:textSize="@dimen/size_7"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_2">

                <ImageView
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/marker_copy"/>

                <TextView
                    android:text="@string/beauty_changing_room"
                    android:textSize="@dimen/size_7"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_2">

                <ImageView
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/marker_copy"/>

                <TextView
                    android:text="@string/safe_space"
                    android:textSize="@dimen/size_7"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_2">

                <ImageView
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/marker_copy"/>

                <TextView
                    android:text="@string/assisted_facility"
                    android:textSize="@dimen/size_7"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_2">

                <ImageView
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/marker_copy"/>

                <TextView
                    android:text="@string/cafe"
                    android:textSize="@dimen/size_7"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_2">

                <ImageView
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/marker_copy"/>

                <TextView
                    android:text="@string/feeding_room"
                    android:textSize="@dimen/size_7"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_2">

                <ImageView
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/marker_copy"/>

                <TextView
                    android:text="@string/diaper_changing_room"
                    android:textSize="@dimen/size_7"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_2">

                <ImageView
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/marker_copy"/>

                <TextView
                    android:text="@string/convinience_shop"
                    android:textSize="@dimen/size_7"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>