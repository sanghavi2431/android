<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_5"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginLeft="@dimen/margin_2"
    android:layout_marginRight="@dimen/margin_2">
    <TextView
        android:id="@+id/itemNameGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_1"
        android:textSize="@dimen/margin_6"
        android:textStyle="bold"
        android:textColor="@color/color_gray"
        android:fontFamily="sans-serif"
        android:text="Mood" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/recy_shadow_back"
            android:layout_below="@id/itemNameGroup"
            android:paddingBottom="@dimen/margin_1"
            android:paddingLeft="@dimen/margin_1"
            android:paddingRight="@dimen/margin_1"
            android:paddingTop="@dimen/margin_1"
            android:elevation="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_marginRight="@dimen/margin_3">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/groupItemRecyHorizontal"
                android:background="@drawable/back_round_card" />
        </LinearLayout>





</RelativeLayout>
