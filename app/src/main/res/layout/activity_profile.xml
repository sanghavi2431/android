<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/margin_10"
    tools:context=".more.editprofile.profile.activity.ProfileActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        app:tint="@color/color_gray" />

    <TextView
        android:id="@+id/maintenanceTextTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_5"
        android:gravity="center"
        android:text="Please fill the form to redeem the Giftcard"
        android:textColor="@color/gray"
        android:textSize="@dimen/textSize_14sp"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="@string/label_first_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="@string/label_last_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="@string/label_email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="@string/label_phone"
                android:importantForAutofill="no"
                android:digits="1234567890+"
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/street_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="@string/label_street_address"
                android:importantForAutofill="no"
                android:inputType="textPostalAddress"
                android:maxLines="1"
                android:textSize="@dimen/textSize_14sp" />


            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="@string/label_city"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="@string/label_state"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="@dimen/textSize_14sp" />

            <EditText
                android:id="@+id/zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="@string/label_zip"
                android:importantForAutofill="no"
                android:inputType="number"
                android:digits="1234567890"
                android:maxLines="1"
                android:maxLength="6"
                android:textSize="@dimen/textSize_14sp" />


            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/label_dob"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="@dimen/textSize_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/upload_adhar"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_gray"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:text="Upload Aadhaar*"
                    android:textSize="@dimen/textSize_14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/adhar_image"
                    android:layout_width="70dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/image_placeholder"
                    android:layout_height="70dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/upload_pan"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_gray"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:text="Upload PAN*"
                    android:textSize="@dimen/textSize_14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/pan_image"
                    android:layout_width="70dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/image_placeholder"
                    android:layout_height="70dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/btnRedeem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_9"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_9"
                android:layout_marginBottom="@dimen/margin_15"
                android:background="@drawable/round_corner_button"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_10"
                android:paddingTop="@dimen/size_5"
                android:paddingRight="@dimen/margin_10"
                android:paddingBottom="@dimen/size_5"
                android:text="Submit"
                android:textColor="@color/color_gray"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>