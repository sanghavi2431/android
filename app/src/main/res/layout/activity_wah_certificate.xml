<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".application_kotlin.presentation.activities.loo_discovery.WahCertificateActivity">


        <LinearLayout
            android:id="@+id/ivBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:gravity="center">

            <ImageView

                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/margin_3"
                android:layout_marginTop="@dimen/margin_3"
                android:layout_marginBottom="@dimen/margin_3"
                android:adjustViewBounds="true"
                android:rotation="90"
                android:src="@drawable/down_arrow_bottom_bar"
                />
            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/small_gray_style"
                android:text="@string/back"
                android:gravity="center"
                android:layout_margin="@dimen/_2sdp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_47sdp"
                        android:background="@color/wah_logo_bg_line" />

                    <ImageView
                        android:id="@+id/ivPhoto"
                        android:layout_width="@dimen/_124sdp"
                        android:layout_height="@dimen/_124sdp"
                        android:background="@drawable/image_woloo_host_bg"
                        android:scaleType="fitXY"
                        android:clipToOutline="true"
                        android:layout_gravity="center"
                        android:src="@drawable/new_wah_logo"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"/>

                </FrameLayout>

                <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Certificate Of Assurance"
                    style="@style/screen_header_text_style_big_center"/>

                        <in.woloo.www.application_kotlin.utilities.CenturyGothicRegularTextView
                            android:id="@+id/wolooNameTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""
                            style="@style/screen_header_text_style"
                            android:gravity="center"
                            />

                <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/wah_certificate_text"
                    style="@style/button_text_style"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"

                    />




<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_25sdp"
    android:backgroundTint="@color/white"
    android:elevation="@dimen/_4sdp"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

                            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Certificate No."
                                style="@style/button_text_style"
                                />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/text_back"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"/>

                                <in.woloo.www.application_kotlin.utilities.CenturyGothicRegularTextView
                                    android:id="@+id/CertificateTv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                   android:hint=""
                                    style="@style/screen_header_text_style_big_center"
                                    android:layout_gravity="center"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_25sdp"
                        android:backgroundTint="@color/white"
                        android:elevation="@dimen/_4sdp"
                        >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >


                        <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/wah_certificate_text2"
                            style="@style/button_text_style"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/text_back"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"/>


                        <in.woloo.www.application_kotlin.utilities.CenturyGothicRegularTextView
                            android:id="@+id/DateOfCreationTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""
                            style="@style/screen_header_text_style_big_center"
                            android:layout_gravity="center"/>


                    </LinearLayout>
                    </androidx.cardview.widget.CardView>




                <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/screen_header_text_style_big_center"
                    android:text="Certified By"
                  />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_77sdp"
                        android:layout_height="@dimen/_54sdp"
                        android:src="@drawable/woloo_logo"
                        />
                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"/>

                    <ImageView
                        android:layout_width="@dimen/_117sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:src="@drawable/toilet_logo_icon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:text="@string/WAH_text3"
                        android:textSize="@dimen/size_4" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>