<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_corner"
    android:orientation="vertical"
    android:padding="25dp"
    >

    <TextView
        android:id="@+id/app_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:padding="5dp"
       android:text="@string/lbl_update_available"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/app_update_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="13dp"
        android:text=""
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/app_update_cancel_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_15"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="@string/not_now"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
            android:id="@+id/app_update_update_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
           android:layout_margin="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="@drawable/new_button_background"
            android:text="@string/update"
            android:gravity="center"
           style="@style/button_text_style"
            />
    </LinearLayout>
</LinearLayout>