<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:padding="@dimen/margin_5">


        <TextView
            android:id="@+id/tv_text"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4.3sp"
            android:textColor="#ffffff"
            android:textSize="@dimen/size_6"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_textyellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="4.3sp"
            android:textColor="#B5AA3A"
            android:visibility="gone"
            android:textSize="@dimen/size_6"
            android:textStyle="normal" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/tv_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4.3sp"
                android:padding="@dimen/margin_3"
                android:text="Cancel"
                android:textColor="#ffffff"
                android:textSize="@dimen/size_5"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/size_8"
                />

            <TextView
                android:id="@+id/tv_positive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/yellow_rectangle_shape"
                android:gravity="center"
                android:text="Continue"
                android:padding="@dimen/margin_3"
                android:textColor="@color/application_background"
                android:textSize="@dimen/size_5"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>