<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rectangle_shape"
    android:elevation="@dimen/_4sdp"
    android:layout_margin="@dimen/_15sdp"
    android:padding="@dimen/_5sdp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_15sdp">
        <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
            android:id="@+id/emergency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency"
            style="@style/host_details_sub_header_style"

            />
        <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
            android:id="@+id/emergency_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact_number"
            style="@style/host_details_sub_header_style"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp" />
        <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please contact this number in case \nof an emergency."
            style="@style/screen_sub_header_text_left"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/call_sos_num"
        android:layout_width="@dimen/_66sdp"
        android:layout_height="@dimen/_66sdp"
        android:src="@drawable/call_sos_icon_yellow"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/_15sdp"/>

</LinearLayout>