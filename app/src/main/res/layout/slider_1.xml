<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_30"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:src="@drawable/ic_welcome"
                android:visibility="gone" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_15sdp"
            android:padding="@dimen/_15sdp"
            >
            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                style="@style/logo_text_style"
                android:layout_gravity="center"/>

            <in.woloo.www.application_kotlin.utilities.CenturyGothicRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/button_text_style"
                android:gravity="center"
                android:text="@string/become_a_woloo_host_msg1_new"
               />
        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_6"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_6"
                android:gravity="center"
                android:lineSpacingExtra="8.7sp"
                android:text="@string/become_a_woloo_host_msg2"
                android:textColor="#f4f4f4"
android:visibility="gone"
                android:textSize="@dimen/size_7"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/llInterestedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_margin="@dimen/_15sdp"
                android:visibility="gone"
               >

                <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                    android:id="@+id/btnInterest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/yes_i_am_interested"
                   style="@style/button_text_style"
                    android:background="@drawable/yello_rectangle_shape"
                    android:elevation="@dimen/_5sdp"
                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>