<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_nav_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_25sdp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <ImageView
        android:id="@+id/fabHomeDashboardDown"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_gravity="center"
        android:src="@drawable/down_arrow_bottom_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp">

        <RelativeLayout
            android:id="@+id/home_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_nav_tabs_background"
            android:elevation="@dimen/_4sdp"
            android:layout_margin="@dimen/_3sdp">



            <ImageView
                android:id="@+id/img_home"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:src="@drawable/home_bottom_nav"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:scaleType="fitXY"
                />


            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                style="@style/bottom_navigation_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_home"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Home\n " />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_nav_tabs_background"
            android:elevation="@dimen/_4sdp"
            android:layout_margin="@dimen/_3sdp">


            <ImageView
                android:id="@+id/img_shop"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:scaleType="centerInside"
                android:src="@drawable/shop_icon_bottom_nav" />


            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                style="@style/bottom_navigation_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_shop"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Shop\n " />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loo_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_nav_tabs_background"
            android:elevation="@dimen/_4sdp"
            android:layout_margin="@dimen/_3sdp">


            <ImageView
                android:id="@+id/img_loo"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:scaleType="fitXY"
                android:src="@drawable/loo_locator_bottom_nav" />


            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                style="@style/bottom_navigation_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_loo"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Loo\nLocator" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_nav_tabs_background"
            android:elevation="@dimen/_4sdp"
            android:layout_margin="@dimen/_3sdp">



            <ImageView
                android:id="@+id/img_profile"
                android:src="@drawable/profile_bottom_nav"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:scaleType="centerCrop"
                />


            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                style="@style/bottom_navigation_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Profile\n " />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp">

        <RelativeLayout
            android:id="@+id/period_tracker_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_nav_tabs_background"
            android:elevation="@dimen/_4sdp"
            android:layout_margin="@dimen/_3sdp">



            <ImageView
                android:id="@+id/img_period_tracker"
                android:src="@drawable/period_tracker_bottom_nav"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:scaleType="fitCenter"
                />


            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                style="@style/bottom_navigation_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_period_tracker"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Period\nTracker" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/thirst_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_nav_tabs_background"
            android:elevation="@dimen/_4sdp"
            android:layout_margin="@dimen/_3sdp">


            <ImageView
                android:id="@+id/img_thirst"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:scaleType="fitXY"
                android:src="@drawable/thrist_reminder_bottom_nav" />


            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                style="@style/bottom_navigation_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_thirst"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Thirst\nReminder" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/community_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_nav_tabs_background"
            android:elevation="@dimen/_4sdp"
            android:layout_margin="@dimen/_3sdp">



            <ImageView
                android:id="@+id/img_community"
                android:src="@drawable/woloo_community_bottom_nav"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:scaleType="fitXY"
                />


            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                style="@style/bottom_navigation_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_community"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Community\n" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/blogs_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_nav_tabs_background"
            android:elevation="@dimen/_4sdp"
            android:layout_margin="@dimen/_3sdp">



            <ImageView
                android:id="@+id/img_blogs"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:scaleType="fitXY"
                android:src="@drawable/blogs_bottom_nav"
                />


            <in.woloo.www.application_kotlin.utilities.CenturyGoticBoldTextView
                style="@style/bottom_navigation_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_blogs"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Blogs\n " />
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>